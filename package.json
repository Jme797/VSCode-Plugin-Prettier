{
  "name": "prettier-vscode-extension",
  "license": "MIT",
  "displayName": "Prettier Formatter",
  "description": "A VS Code extension to format code using Prettier",
  "version": "0.5.47",
  "publisher": "Jme797",
  "repository": {
    "url": "https://github.com/Jme797/VSCode-Plugin-Prettier"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Formatters"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:extension.formatWithPrettier",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "keywords": [
    "prettier",
    "plugin",
    "sort",
    "import",
    "typescript",
    "javascript"
  ],
  "contributes": {
    "commands": [
      {
        "command": "extension.formatWithPrettier",
        "title": "Format with Prettier"
      }
    ],
    "languages": [
      {
        "id": "javascript",
        "extensions": [
          ".js",
          ".jsx",
          ".mjs",
          ".cjs"
        ],
        "aliases": [
          "JavaScript",
          "javascript",
          "js",
          "JSX",
          "jsx"
        ]
      },
      {
        "id": "typescript",
        "extensions": [
          ".ts",
          ".tsx"
        ],
        "aliases": [
          "TypeScript",
          "typescript",
          "ts",
          "TSX",
          "tsx"
        ]
      },
      {
        "id": "typescriptreact",
        "extensions": [
          ".tsx"
        ],
        "aliases": [
          "TypeScript React",
          "typescriptreact",
          "tsx"
        ]
      }
    ],
    "configurationDefaults": {
      "[javascript]": {
        "editor.defaultFormatter": "Jme797.prettier-vscode-extension"
      },
      "[typescript]": {
        "editor.defaultFormatter": "Jme797.prettier-vscode-extension"
      },
      "[typescriptreact]": {
        "editor.defaultFormatter": "Jme797.prettier-vscode-extension"
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "node esbuild.config.js",
    "publish": "node publish.js",
    "t": "node t.js",
    "watch": "esbuild --watch",
    "format": "prettier --write src esbuild.config.js publish.js"
  },
  "dependencies": {
    "@types/resolve": "^1.20.6",
    "pnpapi": "^0.0.0",
    "prettier": "^3.5.0",
    "resolve": "^1.22.10",
    "resolve-package-path": "^4.0.3"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "esbuild": "^0.25.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.0.0",
    "vscode-test": "^1.6.0"
  },
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#1E90FF",
    "theme": "dark"
  }
}
